# Root level .env.example - use this as template
# Copy to .env and fill in your local development values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=ecomm_dev

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ecomm

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Environment
NODE_ENV=development
LOG_LEVEL=debug

# Common Secrets (move to AWS Secrets Manager in production)
JWT_SECRET=your-development-jwt-secret-change-in-production

# Service Ports (used in development)
USERS_PORT=3001
PRODUCTS_PORT=3002
ORDERS_PORT=3003
PAYMENTS_PORT=3004
NOTIFICATIONS_PORT=3005

# API Gateway
ENVOY_PORT=8000
ENVOY_ADMIN_PORT=9901

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_SERVICE_NAME=ecomm

# BetterStack Integration (for logs and traces)
# Get your token from https://betterstack.com/logs
BETTERSTACK_LOGS_TOKEN=your-betterstack-logs-token-here

# Maildev (local email testing)
MAILDEV_HOST=localhost
MAILDEV_PORT=1025

# Feature Flags
PAYMENT_FAILURE_RATE=0.166  # 1 in 6 payments fail (for testing)

# AWS (for later, when deploying)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# ECR_REGISTRY=ACCOUNT.dkr.ecr.REGION.amazonaws.com
